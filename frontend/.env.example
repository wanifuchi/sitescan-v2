# SiteScan V2 Frontend Environment Variables

# アプリケーション設定
VITE_APP_NAME="SiteScan V2"
VITE_APP_VERSION="2.0.0"
VITE_APP_DESCRIPTION="プライバシー重視の高機能ウェブサイト分析ツール"

# API設定
VITE_API_BASE_URL="http://localhost:3002"
VITE_API_TIMEOUT=30000

# 管理者機能設定
VITE_ADMIN_LOGIN_ENABLED=true
VITE_ADMIN_PANEL_URL="/admin"

# プライバシー設定
VITE_PRIVACY_MODE=true
VITE_ANALYTICS_ENABLED=false
VITE_TRACKING_ENABLED=false

# 開発環境設定
VITE_DEV_MODE=false
VITE_DEBUG_MODE=false

# PWA設定
VITE_PWA_ENABLED=true
VITE_PWA_NAME="SiteScan V2"
VITE_PWA_SHORT_NAME="SiteScan"
VITE_PWA_DESCRIPTION="プライバシー重視のウェブサイト分析ツール"

# セキュリティ設定
VITE_CSP_ENABLED=true
VITE_HTTPS_ONLY=true

# ブラウザ保存設定
VITE_INDEXEDDB_NAME="sitescan-v2"
VITE_INDEXEDDB_VERSION=1
VITE_DATA_RETENTION_DAYS=30

# UI設定
VITE_THEME_DEFAULT="dark"
VITE_LANGUAGE_DEFAULT="ja"
VITE_ANIMATIONS_ENABLED=true