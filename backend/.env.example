# SiteScan V2 Backend Environment Variables

# アプリケーション設定
NODE_ENV=development
PORT=3002
APP_NAME="SiteScan V2 API"
APP_VERSION="2.0.0"

# データベース設定
DATABASE_URL="postgresql://username:password@localhost:5432/sitescan_v2"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sitescan_v2
DB_USER=username
DB_PASSWORD=password

# JWT認証設定
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="24h"

# 管理者認証設定
ADMIN_DEFAULT_USERNAME="admin"
ADMIN_DEFAULT_PASSWORD="admin123"
ADMIN_DEFAULT_EMAIL="admin@sitescan.local"

# セキュリティ設定
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Puppeteer設定
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=""
PUPPETEER_DISABLE_HEADLESS_WARNING=true

# API設定
CORS_ORIGIN="https://sitescan.vercel.app"
API_TIMEOUT=30000
MAX_CONCURRENT_ANALYSES=3

# 外部API設定
GOOGLE_API_KEY=""
PAGESPEED_API_KEY=""
GEMINI_API_KEY=""

# ログ設定
LOG_LEVEL=info
LOG_FILE=logs/sitescan-v2.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# キャッシュ設定
REDIS_URL=""
CACHE_TTL=3600

# ファイル保存設定
UPLOAD_MAX_SIZE=10485760
TEMP_DIR=./temp
EXPORT_DIR=./exports

# 分析設定
ANALYSIS_TIMEOUT=120000
MAX_PAGES_PER_ANALYSIS=50
CRAWLER_DELAY=1000

# 監視とメトリクス
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# 開発環境設定
DEV_MODE=true
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false